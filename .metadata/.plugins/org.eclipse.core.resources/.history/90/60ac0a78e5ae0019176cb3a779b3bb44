package com.br.ctis.controle.de.turma.controller.dto;

import java.util.List;
import java.util.stream.Collectors;

import com.br.ctis.controle.de.turma.model.Aluno;

public class AlunoDto {
	
	private Long id;
	private String nome;
	private int matricula;
	private int cpf;
	private int rg;
	private int data;
	private String genero;
	private String email;
	
	public AlunoDto(Aluno aluno) {
		this.id = aluno.getId();
		this.nome = aluno.getNome();
		this.matricula = aluno.getMatricula();
		this.cpf = aluno.getCpf();
		this.rg = aluno.getRg();
		this.data = aluno.getData();
		this.genero = aluno.getGenero();
		this.email = aluno.getEmail();
	}
	
	public Long getId() {
		return id;
	}
	public String getNome() {
		return nome;
	}
	public int getMatricula() {
		return matricula;
	}
	public int getCpf() {
		return cpf;
	}
	public int getRg() {
		return rg;
	}
	public int getData() {
		return data;
	}
	public String getGenero() {
		return genero;
	}
	public String getEmail() {
		return email;
	} 
	
	//public static List<AlunoDto> convertetListaDto(List<Aluno> alunos){
	//	return alunos.stream().map(AlunoDto::new).collect(Collectors.toList());
	//}

}

package com.br.ctis.controle.de.turma.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.br.ctis.controle.de.turma.model.Turma;
import com.br.ctis.controle.de.turma.service.TurmaService;

@RestController
@RequestMapping("turmas")
public class TurmaController {
	
	@Autowired
	private TurmaService turmaService;
	
	@GetMapping
	public ResponseEntity<?> recuperarTurmas(){
		List<?> turmas = this.turmaService.listarTurmas();
		return ResponseEntity.ok(turmas);
	}
	
	@PostMapping
	public ResponseEntity<?> salvarTurmas(Turma turmas){
		List<?> turma = this.turmaService.salvarturma(turma);
		return ResponseEntity.ok(turma);
	}

}

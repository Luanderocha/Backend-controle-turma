package com.br.ctis.controle.de.turma.controller;



import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.br.ctis.controle.de.turma.model.Turma;
import com.br.ctis.controle.de.turma.service.TurmaService;

import io.swagger.annotations.Api;
import io.swagger.annotations.ApiOperation;

@Api(value = "Controller responsável por realizar as ações da turma")
@RestController
@RequestMapping("turmas")
public class TurmaController {
	
	@Autowired
	private TurmaService turmaService;
	
	@ApiOperation(value = "Lista todas as turmas")
	@GetMapping
	public ResponseEntity<?> recuperarTurmas(){
		return ResponseEntity.ok(this.turmaService.listarTurmas());
	}
	
	@ApiOperation(value = "busca a Turma por id")
	@GetMapping("{id}")
	public ResponseEntity<?> buscarTurmaId(@RequestParam Long id){
		return ResponseEntity.ok(this.turmaService.buscarTurmaId(id));
	}
	
	@ApiOperation(value = "salvar uma nova turma")
	@PostMapping
	public ResponseEntity<?> salvarTurma(@RequestBody Turma turma){
		this.turmaService.salvarturma(turma);
		return ResponseEntity.ok().build();
	}
}
